doctype html
html
head
    meta(http-equiv="content-type", content="#{contentType}; charset=UTF-8")
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
body
    include menu
    hr
    if(full_edit == "yes")
        form(action='/changeProject',method='post')
            input(type="hidden", name="id", value="#{data.id}")
            div(class="form-input")
                label(for="name") Ime projekta:
                input(type='text',name='name',placeholder='Ime projekta',value="#{data.name}")
            div(class="form-input")
                label(for="desc") Opis projekta:
                textarea(name='desc',placeholder='Opis')= data.desc
            div(class="form-input")
                label(for="cost") Cijena projekta:
                input(type="text", name="cost",value="#{data.desc}")
            div(class="form-input")
                label(for="tasks") Obavljeni poslovi projekta:
                textarea(name='tasks',placeholder='Obaljeni zadatci')= data.tasks
            div(class="form-input")
                label(for="date_start") Vrijeme pocetka projekta:
                input(type="date", name="date_start", value="#{data.date_start}")
            div(class="form-input")
                label(for="date_finish") Vrijeme zavrsetka projekta:
                input(type="date", name="date_finish", value="#{data.date_finish}") 
            div(class="form-input")
                button(type="submit") Spremi promjene
    else
        form(action='/changeProject',method='post')
            input(type="hidden", name="id", value="#{data.id}")
            h2 Naziv projekta:
            p= data.name
            h4 Ime vođe:
            p= data.creator_name
            h4 Opis projekta:
            p= data.desc
            h4 Cijena projekta:
            p= data.cost
            h4 Poslovi projekta:
            div(class="form-input")
                label(for="tasks") Obavljeni poslovi projekta:
                textarea(name='tasks',placeholder='Obaljeni zadatci')= data.tasks
            p= data.date_start
            h4 Datum završetka:
            p= data.date_finish
            div(class="form-input")
                button(type="submit") Spremi promjene